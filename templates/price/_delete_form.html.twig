<form method="post" action="{{ path('app_price_delete', {'id': price.id}) }}"
      onsubmit="return confirm('Êtes-vous sûr de bien vouloir supprimer cet élément ?');" class="float-start mx-2">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ price.id) }}">
    <button class="btn btn-danger">
        <i class="las la-trash fs-5"></i>
        <span class="kt-hidden-mobile">Supprimer</span>
    </button>
</form>
